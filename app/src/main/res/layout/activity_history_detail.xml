<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.HistoryDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:scrollingCache="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/his_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="颜色分类，黑色加强锋利款"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:padding="20dp"
                        app:srcCompat="@drawable/greate" />

                    <LinearLayout
                        android:id="@+id/his_deti_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="price" />

                                <TextView
                                    android:id="@+id/his_detil_c_price"
                                    style="@style/his_detail_textStyle"
                                    android:text="¥25"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="price" />

                                <TextView
                                    android:id="@+id/his_detil_b_price"
                                    style="@style/his_detail_textStyle"
                                    android:text="5253.00 ks"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="currency" />

                                <TextView
                                    android:id="@+id/his_detil_currency"
                                    style="@style/his_detail_textStyle"
                                    android:text="¥204"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="count" />

                                <TextView
                                    android:id="@+id/his_detil_count"
                                    style="@style/his_detail_textStyle"
                                    android:text="1"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="total" />

                                <TextView
                                    android:id="@+id/his_detil_c_total"
                                    style="@style/his_detail_textStyle"
                                    android:text="¥25"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="total" />

                                <TextView
                                    android:id="@+id/his_detil_b_total"
                                    style="@style/his_detail_textStyle"
                                    android:text="5253.00 ks"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="taobao" />

                                <TextView
                                    android:id="@+id/his_detil_taobao"
                                    style="@style/his_detail_textStyle"
                                    android:text="5253.00 ks"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                            <TableRow>

                                <TextView
                                    style="@style/his_detail_textStyle"
                                    android:text="tracking" />

                                <TextView
                                    android:id="@+id/his_detil_tracking"
                                    style="@style/his_detail_textStyle"
                                    android:text="5253.00 ks"
                                    android:textAlignment="textEnd"
                                    tools:ignore="RtlCompat" />

                            </TableRow>

                            <View
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey_500"/>

                        </TableLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/his_detail_textStyle"
                    android:text="id: 22334455666"
                    android:layout_marginLeft="20dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_500" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>